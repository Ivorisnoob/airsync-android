<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme that adapts to system light/dark and avoids white flash by setting windowBackground -->
    <style name="Theme.AirSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ensure the initial window background matches theme mode -->
        <item name="android:windowBackground">@color/app_window_background</item>

        <!-- Explicitly disable any system action bar/title -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Edge-to-edge; colors handled in code based on content -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>