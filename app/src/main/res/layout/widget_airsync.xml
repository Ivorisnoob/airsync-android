<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:clickable="true"
    android:gravity="center_horizontal">

    <!-- Device image takes flexible space at top -->
    <ImageView
        android:id="@+id/widget_device_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="Device image"
        android:src="@drawable/ic_laptop_24"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp" />

    <!-- Header: Name and status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AirSync"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/widget_primary_text" />

            <TextView
                android:id="@+id/widget_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnected"
                android:textSize="12sp"
                android:textColor="@color/widget_secondary_text" />
        </LinearLayout>
    </LinearLayout>

    <!-- Actions Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/widget_btn_disconnect"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Disconnect"
            android:textStyle="bold"
            android:textColor="@color/widget_on_primary"
            android:background="@drawable/widget_button_primary"
            android:visibility="gone"
            android:clickable="true" />

        <TextView
            android:id="@+id/widget_btn_reconnect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reconnect"
            android:textStyle="bold"
            android:textColor="@color/widget_primary_text"
            android:background="@drawable/widget_button_secondary"
            android:clickable="true" />
    </LinearLayout>
</LinearLayout>
