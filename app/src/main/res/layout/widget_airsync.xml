<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background"
    android:clickable="true"
    android:gravity="center">

    <!-- AirSync App Title -->
    <TextView
        android:id="@+id/widget_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/airsync"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/widget_primary_text"
        android:layout_marginBottom="8dp" />

    <!-- Work In Progress Message -->
    <TextView
        android:id="@+id/widget_wip_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/work_in_progress"
        android:textSize="14sp"
        android:textColor="@color/widget_secondary_text"
        android:layout_marginBottom="4dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_under_development"
        android:textSize="12sp"
        android:textColor="@color/widget_secondary_text"
        android:gravity="center" />

</LinearLayout>
