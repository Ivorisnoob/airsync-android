<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dynamic Material You (API 31+) light theme mapping using framework Monet buckets -->
    <color name="widget_background">@android:color/system_neutral1_50</color>
    <color name="widget_border">@android:color/system_neutral1_10</color>

    <color name="widget_primary_text">@android:color/system_neutral1_900</color>
    <color name="widget_secondary_text">@android:color/system_neutral2_700</color>
    <!-- Keep widget_on_primary from base (white) for reliable contrast -->

    <color name="connected_green">@android:color/system_accent3_600</color>
    <!-- Let disconnected_red/error_red fall back to base static colors -->
    <color name="not_configured_gray">@android:color/system_neutral2_500</color>

    <color name="widget_primary_button">@android:color/system_accent1_600</color>
    <color name="widget_secondary_button">@android:color/system_neutral1_0</color>
    <color name="widget_button_border">@android:color/system_neutral2_400</color>
    <color name="widget_on_primary">@android:color/system_neutral1_10</color>

    <color name="widget_plus_badge_bg">@android:color/system_accent1_600</color>
    <color name="plus_badge_bg">@android:color/system_accent1_600</color>
</resources>
